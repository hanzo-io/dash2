.input .placeholder
  color: $placeholderColor1

readonly.input.input.input
  input
    border-bottom: 0

  &.link
    input
      cursor: pointer
      color: $accentColor1

.input.input.input
  &:last-child:first-child
    margin-bottom: 0

  .label
    color: $placeholderColor1
    transition: all $transitionFast linear

switch.input.input.input
  display: flex
  align-items: center

  input
    display: none

  .switch
    height: 1.5em
    width: 2.5em
    margin-top: .325em
    margin-right: 8px
    display: block
    float: left
    background-color: $backgroundColor2
    box-shadow: inset 0 1px 3px $dropShadowColor1
    transition: all $transitionFast ease-in-out
    cursor: pointer

    .switch-slider
      width: 1.125em
      height: 1.125em
      position: relative
      top: .1875em
      left: .1875em
      background-color: $backgroundColor1
      box-shadow: 0 2px 5px $dropShadowColor1
      transition: all $transitionFast ease-in-out

  input:checked + .switch
    background-color: $accentColor2

    .switch-slider
      left: 1.1875em

  .label.label.label.label
    display: block
    position: relative
    top: 0
    left: 0
    font-size: 1rem

