.screen
  width: 100vw
  height: 100vh
  position: absolute
  left: 0
  top: 0
  font-size: $fontSize
  color: $textColor1

  .header
    margin-bottom: 20px

  .content
    background-color: $backgroundColor1
    box-shadow: 0 2px 5px $dropShadowColor1

    & > *
      display: block
      overflow: auto
      padding $elementVSpacing $elementHSpacing
      border-bottom: $elementBorderWidth solid $borderColor2

      &:last-child
        border-bottom: 0

    .title
      color: $textColor1
      background-color: $backgroundColor2

