$elementSpacing = 20px

hanzo-product
  .header
    .input.input.input
      max-width: 400px
      float: left
      margin-bottom: 0
    button
      float: right
      margin-left: $elementSpacing
      width: auto

  .form-1, .form-2
    .form-part
      .form-section
        column 1/2 2 ($elementSpacing * 2)

  .two-inputs
    & > .input.input.input
    & > .checkbox.checkbox.checkbox
      column 1/2 2 $elementSpacing

  .three-images > img
    column 1/3 3 $elementSpacing

  .three-inputs
    & > .input.input.input
    & > .checkbox.checkbox.checkbox
      column 1/3 3 $elementSpacing

  .four-inputs
    & > .input.input.input
    & > .checkbox.checkbox.checkbox
      column 1/4 4 $elementSpacing

  .quarter-quarter-half-inputs
    & > .input.input.input:not(:last-child)
    & > .checkbox.checkbox.checkbox:not(:last-child)
      column 1/4 3 $elementSpacing
    & > .input.input.input:last-child
    & > .checkbox.checkbox.checkbox:last-child
      column 1/2 3 $elementSpacing

  .dimensions
    .input
      position: relative
      &:nth-child(-n+2):after
        content: 'x'
        display: block
        position: absolute
        right: -.9em
        bottom: -.3em

hanzo-products
  .header
    h2
      float: left
    button
      float: right
      margin-left: $elementSpacing
      width: auto

      &.open
        opacity: .5

  .table-row
    cursor: pointer
  .table-cell
    padding: 10px

    &.img
      max-width: 100px
      padding: 10px
